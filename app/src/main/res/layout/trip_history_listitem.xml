<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_trip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/label_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_trip_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_location" />

    <TextView
        android:id="@+id/history_start_point"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_trip_name"
        android:layout_toEndOf="@+id/label_from"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/label_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_trip_name"
        android:layout_toEndOf="@id/history_start_point"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_location"/>


    <TextView
        android:id="@+id/history_end_point"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_trip_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/label_to" />

    <ImageView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_per_duration" />

    <TextView
        android:id="@+id/trip_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/label_date" />

    <ImageView
        android:id="@+id/label_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/trip_date"
        android:src="@drawable/ic_baseline_duration" />


    <TextView
        android:id="@+id/trip_repeat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/label_repeat" />

    <ImageView
        android:id="@+id/label_average_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_speed" />


    <TextView
        android:id="@+id/average_speed"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/label_average_speed" />

    <ImageView
        android:id="@+id/label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_repeat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/average_speed"
        android:src="@drawable/ic_baseline_done" />

    <TextView
        android:id="@+id/history_trip_status"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/trip_repeat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@id/label_status" />

</RelativeLayout>