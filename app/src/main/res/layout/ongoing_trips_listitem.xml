<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ongoing_trip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_baseline_delete"
        android:backgroundTint="@color/black" />

    <ImageView
        android:id="@+id/label_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ongoing_trip_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_location" />

    <TextView
        android:id="@+id/ongoing_start_point"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ongoing_trip_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/label_from" />

    <ImageView
        android:id="@+id/label_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ongoing_trip_name"
        android:layout_toEndOf="@id/ongoing_start_point"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_location"/>


    <TextView
        android:id="@+id/ongoing_end_point"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ongoing_trip_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/label_to" />

    <ImageView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_date" />

    <TextView
        android:id="@+id/trip_date"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/label_date" />


    <ImageView
        android:id="@+id/label_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/trip_date"
        android:src="@drawable/ic_baseline_hour" />


    <TextView
        android:id="@+id/trip_hour"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/label_hour" />

    <ImageView
        android:id="@+id/label_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_repeat" />


    <TextView
        android:id="@+id/trip_repeat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/label_repeat" />


    <ImageView
        android:id="@+id/label_directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/trip_repeat"
        android:src="@drawable/ic_baseline_directions" />


    <TextView
        android:id="@+id/trip_directions"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/label_directions" />

    <Button
        android:id="@+id/button_start_trip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_directions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/customer_button"
        android:text="@string/start"
        android:textColor="@color/white"
        app:backgroundTint="@null" />

    <ImageButton
        android:id="@+id/button_notes"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/label_directions"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/ic_notes"
        android:backgroundTint="@color/black" />

    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/label_directions"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_baseline_edit"
        android:backgroundTint="@color/black" />

    <TextView
        android:id="@+id/trip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>